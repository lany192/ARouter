<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="基础功能" />

            <Button
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简单的应用内跳转" />

            <Button
                android:id="@+id/test3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转到Kotlin页面" />

            <Button
                android:id="@+id/test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转ForResult" />

            <Button
                android:id="@+id/test4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取Fragment实例" />

            <Button
                android:id="@+id/testWithParams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="携带参数的应用内跳转" />

            <Button
                android:id="@+id/oldVersionAnim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旧版本转场动画" />

            <Button
                android:id="@+id/newVersionAnim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新版本转场动画" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="进阶用法" />

            <Button
                android:id="@+id/navByUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过URL跳转" />

            <Button
                android:id="@+id/interceptor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拦截器测试" />

            <Button
                android:id="@+id/autoInject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="依赖注入(参照代码)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="服务管理" />

            <Button
                android:id="@+id/navByName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ByName调用服务" />

            <Button
                android:id="@+id/navByType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ByType调用服务" />

            <Button
                android:id="@+id/callSingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="调用单类" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="多模块测试" />

            <Button
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转到yellow模块" />

            <Button
                android:id="@+id/navToMoudle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转到模块2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="跳转失败测试" />

            <Button
                android:id="@+id/failNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转失败，单独降级" />

            <Button
                android:id="@+id/failNav2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转失败，全局降级" />

            <Button
                android:id="@+id/failNav3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务调用失败" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="动态增加路由测试" />

            <Button
                android:id="@+id/addGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="动态增加路由" />

            <Button
                android:id="@+id/dynamicNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="动态路由测试" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="测试" />

            <Button
                android:id="@+id/sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他测试" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>